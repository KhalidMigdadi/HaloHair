@model HaloHair.Models.Vacancy

@{
    ViewData["Title"] = "Delete Vacancy";
    Layout = "~/Views/Shared/_Layout_Barber.cshtml";
}




<div class="container mt-5">
    <h3>Are you sure you want to delete this vacancy?</h3>
    <div class="mt-3">
        <h4>@Model.Position</h4>
        <p><strong>Location:</strong> @Model.Location</p>
        <p><strong>Salary:</strong> @Model.Salary</p>
        <form asp-action="DeleteVacancyConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="MyVacancies" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
