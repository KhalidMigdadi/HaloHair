
@{
    ViewData["Title"] = "EditSalonAbout";
    Layout = "~/Views/Shared/_Layout_Barber.cshtml";

}

@model EditSalonAboutViewModel

<h2>Edit Salon About</h2>

<form asp-action="EditSalonAbout" method="post">
    <input type="hidden" name="SalonId" value="@Model.SalonId" />

    <div class="form-group">
        <label for="About">About the Salon</label>
        <textarea class="form-control" id="About" name="About" rows="5">@Model.About</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

