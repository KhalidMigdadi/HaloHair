    <style>
        footer {
            background-color: #2c3e50;
            color: #ecf0f1;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

            /* Section: Social media */
            footer .border-bottom {
                border-color: rgba(255,255,255,0.1) !important;
            }

            footer .social-container {
                display: flex;
                align-items: center;
            }

                footer .social-container a {
                    margin: 0 10px;
                    transition: transform 0.3s ease;
                }

                    footer .social-container a:hover {
                        transform: translateY(-3px);
                    }

            footer .facebook {
                color: #3b5998;
            }

            footer .twitter {
                color: #1da1f2;
            }

            footer .instagram {
                color: #e1306c;
            }

            footer .linkedin {
                color: #0077b5;
            }

            /* Section: Links */
            footer h6 {
                color: #3498db;
                font-size: 1.1rem;
                letter-spacing: 1px;
                margin-bottom: 20px;
                position: relative;
                padding-bottom: 10px;
            }

                footer h6::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: 0;
                    width: 50px;
                    height: 2px;
                    background: #3498db;
                }

            footer p {
                margin-bottom: 12px;
                line-height: 1.6;
            }

            footer a.text-reset {
                color: #bdc3c7 !important;
                text-decoration: none;
                transition: all 0.3s ease;
                display: inline-block;
            }

                footer a.text-reset:hover {
                    color: #3498db !important;
                    transform: translateX(5px);
                }

            /* Contact section icons */
            footer .fas, footer .fab {
                width: 20px;
                text-align: center;
            }

            /* Copyright section */
            footer .text-center {
                background-color: rgba(0, 0, 0, 0.2) !important;
                font-size: 0.9rem;
            }

       
    </style>
