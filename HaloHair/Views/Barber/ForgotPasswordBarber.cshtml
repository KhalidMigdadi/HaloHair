@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout_Services.cshtml";
}
@section Style {
    <link href="~/css/loginUser.css" rel="stylesheet" />
    <style>
        .reset-header {
            margin-bottom: 25px;
            text-align: center;
        }

        .reset-text {
            text-align: center;
            margin-bottom: 30px;
            color: var(--para-color);
        }
    </style>
}
<section class="login-section">
    <div class="containerLogin">
        <div class="login-container">
            <div class="login-form">
                <div class="arrow">
                    <a href="@Url.Action("LoginBarberMen","Barber")">
                        <i class="fa-solid fa-arrow-left fa-2x"></i>
                    </a>
                </div>
                <h1 class="reset-header">Forgot Password</h1>
                <p class="reset-text">Enter your email address to receive a password reset code</p>

                <form asp-action="HandleForgotPasswordBarber" asp-controller="Barber" method="post">
                    <div class="form-group">
                        <input type="email"
                               id="email"
                               name="email"
                               placeholder="Enter your email"
                               required />
                    </div>
                    <button type="submit" class="btn-submit">Send Code</button>
                </form>

                @if (TempData["ResetError"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ResetError"]
                    </div>
                }
            </div>

            <div class="login-image">
                <!-- Place your image here -->
            </div>
        </div>
    </div>
</section>
