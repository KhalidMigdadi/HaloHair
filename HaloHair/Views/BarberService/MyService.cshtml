@model List<HaloHair.Models.Service> // it will deal with list of services (i use it when i want to recived list )


@{
	ViewData["Title"] = "MyService";
	Layout = "~/Views/Shared/_Layout_Barber.cshtml";

}









<h2>My Services</h2>

<table class="table">
	<thead>
		<tr>
			<th>Service Name</th>
			<th>Description</th>
			<th>Price</th>
			<th>Duration (minutes)</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var service in Model) // model is the list of services
		{
			<tr>
				<td>@service.ServiceName</td>
				<td>@service.Description</td>
				<td>@service.Price</td>
				<td>@service.Duration</td>
				<td>@service.BarberFirstName</td>
				<td>@service.BarberLastName</td>
				<td>@service.Salon</td>
				<td>
					<a class="btn btn-warning btn-sm" href="@Url.Action("EditService", "BarberService", new { serviceId = service.Id})">Edit</a>

					@* <a asp-action="EditService" asp-route-id="@service.Id" class="btn btn-warning btn-sm">Edit</a> *@
					<form asp-action="DeleteService" method="post" onsubmit="return confirm('Are you sure you want to delete this service?');">
						<input type="hidden" name="serviceId" value="@service.Id" />
						<button type="submit" class="btn btn-danger btn-sm">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>

