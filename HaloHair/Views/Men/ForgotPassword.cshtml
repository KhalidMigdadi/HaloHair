
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout_Services.cshtml";
}
@section Style {
    <link href="~/css/loginUser.css" rel="stylesheet" />

}
<section class="login-section">
    <div class="containerLogin">
        <div class="login-container">
            <!-- Left side: Form -->
            <div class="login-form">
                <div class="arrow">
                    <a href="@Url.Action("LoginUserMen","Men")">
                        <i class="fa-solid fa-arrow-left fa-2x"></i>
                    </a>
                </div>
                <h1 class="reset-header">Forgot your password?</h1>
                <p class="reset-text">Enter your email address to receive a password reset code.</p>

                <form asp-action="HandleForgotPassword" asp-controller="Men" method="post">
                    <div class="form-group">
                        <input type="email"
                               id="email"
                               name="email"
                               placeholder="Enter your email"
                               required />
                    </div>
                    <button type="submit" class="btn-submit">Send code</button>
                </form>

                @if (TempData["ResetError"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ResetError"]
                    </div>
                }
            </div>

            <!-- Right side: Image -->
            <div class="login-image">
                <!-- You can place your image here -->
            </div>
        </div>
    </div>
</section>
