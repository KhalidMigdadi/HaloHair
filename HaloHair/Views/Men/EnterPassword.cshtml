@{
    ViewData["Title"] = "EnterPassword";
    Layout = "~/Views/Shared/_Layout_Services.cshtml";
}

@section Style {
    <link href="~/css/loginUser.css" rel="stylesheet" />
}

<section class="login-section">
    <div class="containerLogin">
        <div class="login-container">
            <!-- Left side: Form -->
            <div class="login-form">
                <div class="arrow">
                    <a href="@Url.Action("LoginUserMen", "Men")">
                        <i class="fa-solid fa-arrow-left fa-2x"></i>
                    </a>
                </div>
                <h1>For User Use</h1>
                <span class="wlcom">Welcome back!</span>
                <p class="p1">
                    Enter your password and login as <b>@ViewBag.Email</b>
                </p>

                <!-- Password Form -->
                <form asp-action="EnterPassword" asp-controller="Men" method="POST">
                    <div class="form-group">
                        <input type="password"
                               id="password"
                               name="password"
                               placeholder="Enter your Password"
                               required />
                    </div>

                    <button type="submit" class="btn-submit">Continue</button>
                </form>

                <!-- Show password error if it exists -->
                @if (TempData["PasswordErrorLogin"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["PasswordErrorLogin"]
                    </div>
                }

                <!-- Link for password reset -->
                <div class="extra-links">
                    <a href="@Url.Action("ForgotPassword", "Men")">Forget Password?</a>
                </div>
            </div>

            <!-- Right side: Image -->
            <div class="login-image">
                <!-- You can place your image here -->
            </div>
        </div>
    </div>
</section>
