@{
    ViewData["Title"] = "RegisterUser";
    Layout = "~/Views/Shared/_Layout_Services.cshtml";
}

@section Style {
    <link href="~/css/RegisterUser.css" rel="stylesheet" />
}

@model User

<section class="login-section">
    <div class="login-container">
        <!-- Left side: Form -->
        <div class="arrow">
            <a href="@Url.Action("LoginUserMen","Men")">
                <i class="fa-solid fa-arrow-left fa-2x"></i>
            </a>
        </div>
        <div class="login-form">
            <h1>For Personal Use</h1>
            <span class="wlcom">Welcome</span>
            <p class="p1">
                Ready to book your next salon visit with ease? Sign up today to access top stylists, manage your appointments effortlessly, and enjoy exclusive rewards. Already a member?
                <a class="sign" href="@Url.Action("LoginUserMen","Men")">log in here</a> to continue.
            </p>

            <h2>Sign Up</h2>

            @if (TempData["Confirm"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Confirm"]
                </div>
            }

            <form asp-controller="Men" asp-action="RegisterUserMen" method="post">
                <div class="form-group">
                    <!-- First Name -->
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" placeholder="Enter your First Name" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <!-- Last Name -->
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter your Last Name" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <!-- Email -->
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required />
                </div>
                <div class="form-group">
                    <!-- Confirm Password -->
                    <label for="confirmPassword">Confirm Your Password</label>
                    <input id="confirmPassword" name="confirmPassword" type="password" class="form-control" placeholder="Confirm Your Password" required />
                </div>
                <div class="form-group">
                    <!-- Phone Number -->
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your mobile number" required />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <!-- Gender -->
                    <label for="Gender">Gender</label>
                    <select name="Gender" class="form-control" required>
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>

            <div class="extra-links">
                <div>
                    <p>
                        Are you a business owner looking to grow your salon and receive more bookings?
                        <a href="@Url.Action("LoginBarberMen","Barber")">Login</a>
                    </p>
                </div>
                <div>
                    
                </div>
            </div>
        </div>

        <!-- Right side: Image -->
        <div class="login-image">
            <img src="../Images/Login&SignUp/MenLogin1.jpg" alt="" />
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Client-side validation for password matching
        const passwordField = document.getElementById('password');
        const confirmPasswordField = document.getElementById('confirmPassword');

        confirmPasswordField.addEventListener('input', function() {
            if (passwordField.value !== confirmPasswordField.value) {
                confirmPasswordField.setCustomValidity("Passwords do not match!");
            } else {
                confirmPasswordField.setCustomValidity('');
            }
        });
    </script>
}
